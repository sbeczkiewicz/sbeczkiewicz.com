---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Section from "@components/Section.astro";
import "../../global.css";

interface Props {
  photo: CollectionEntry<"photos">;
}
const { photo } = Astro.props;

export async function getStaticPaths() {
  const photos = await getCollection("photos");
  return photos.map((p) => ({
    params: { slug: p.slug },
    props: { photo: p },
  }));
}
---

<Layout title={photo.data.title}>
  <Section title={photo.data.title}>
    <div>
      <img
        src={photo.data.compressed.src}
        alt={photo.data.alt}
        class="w-full"
      />
    </div>
    <div class="my-3 md:flex md:flex-row">
      <div class="flex-auto space-y-2">
        <div>
          <p>{photo.data.location}</p>
          <p>
            {
              photo.data.date.toLocaleString("en-US", {
                month: "long",
                year: "numeric",
              })
            }
          </p>
        </div>
      </div>
      <div class="mt-3 md:mt-0">
        <p>
          <a href={photo.data.original.src} class="underline">
            Download Original
          </a>
        </p>
      </div>
    </div>
  </Section>
</Layout>
