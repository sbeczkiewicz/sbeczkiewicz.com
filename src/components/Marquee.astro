---
interface Props {
  title: string;
  subTitle: string;
}
const { title, subTitle } = Astro.props;
---

<div class="my-8 md:my-16">
  <div class="text-left">
    <h1 class="text-4xl font-black text-primary md:text-5xl">{title}</h1>
    <p class="sfont-medium text-lg leading-tight md:text-2xl">
      {subTitle}
    </p>
  </div>
</div>
