---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-griko text-cultured px-6">
    <header>
      <div class="frame my-8">Nav bar goes here</div>
    </header>
    <main>
      <div class="frame space-y-8">
        <slot />
      </div>
    </main>
    <footer>
      <div class="">Copyright Steve Beczkiewicz 2023</div>
    </footer>
  </body>
</html>
